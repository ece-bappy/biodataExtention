{
    "manifest_version": 3,
    "name": "Hello World Extension",
    "version": "1.0",
    "description": "Simple extension that opens a side panel with 'Hello World'.",
    "permissions": ["activeTab"],
    "action": {
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      },
      "default_popup": "popup.html"
    }
  }
  